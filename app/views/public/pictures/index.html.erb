<div class="container">
  <div class="text-center mt-3">
    <h1 class="col-md-2 mx-auto midasi d-inline">ご挨拶</h1>
    <p class="mx-auto submidasi d-inline">
      （全<%= @pictures.count %>件）
    </p>
  </div>

  <!--画像部分の繰り返し処理-->
  <div class="d-flex flex-wrap items_width">
    <% @pictures.each do |picture| %>
      <div class="mx-3 my-3">
        <%= image_tag picture.get_picture_image(200, 160) %><br>
        <%= picture.name %>
      </div>
    <% end %>
  </div>

  <!--ページネーション-->
  <div class="row justify-content-center my-4">
    <%= paginate @pictures %>
  </div>

</div>